<h3>Main settings:</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('URL') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.resumeprint.url">
        </div>
    </div>
</form>

<h3>{{ _('Position settings') }}</h3>
<form class="form-horizontal" data-bind="foreach: {data:Object.keys(settings.plugins.resumeprint.position) }">
    <div class="octorant_message" data-bind="visible: $parent.settings.plugins.resumeprint.position[$data].name">
        <h4>
            <input type="checkbox" class="" data-bind="checked: $parent.settings.plugins.resumeprint.position[$data].enabled"/>
            <span data-bind="text: $parent.settings.plugins.resumeprint.position[$data].name"></span>
        </h4>
        <div class="control-group">
            <label class="control-label">{{ _("Message") }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: $parent.settings.plugins.resumeprint.position[$data].message"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{ _("Include snapshot") }}</label>
            <div class="controls">
                <input type="checkbox" data-bind="checked: $parent.settings.plugins.resumeprint.position[$data].with_snapshot"/>
            </div>
        </div>
        <div class="control-group" data-bind="if: $parent.settings.plugins.resumeprint.position[$data].value">
            <label class="control-label">{{ _("Notify every") }}</label>
            <div class="controls">
                <input type="number" min="1" max="100" step="1" data-bind="value: $parent.settings.plugins.resumeprint.position[$data].value"/>%
            </div>
        </div>
    </div>
</form>
